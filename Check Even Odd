#include <iostream>
using namespace std;
void checkEvenOdd(int n);

int main()
{
  int n;
  cout<<"enter number"<<endl;
  cin>>n;
   checkEvenOdd(n);
    return 0;
}

void checkEvenOdd(int number){
    if(number%2==0)
    cout<<"number is even"<<endl;
    else
    cout<<"number is odd"<<endl;
    
}

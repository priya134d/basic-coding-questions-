#include <iostream>
using namespace std;

int main()
{
    int n, m;
    cin>>n>>m;
    int a[n][m], b[n][m], c[n][m];
    
    cout<<"enter first matrix"<<endl;
    for(int i=0; i<n; i++){
        for(int j=0;j<m; j++){
            cin>>a[i][j];
        }
    }
    
  for(int i=0; i<n; i++){
        for(int j=0;j<m; j++){
            cout<<a[i][j]<<" ";
        }
        cout<<endl;
    }
    
    cout<<"enter second matrix"<<endl;
    for(int i=0; i<n; i++){
        for(int j=0;j<m; j++){
            cin>>b[i][j];
        }
    }
    
     for(int i=0; i<n; i++){
        for(int j=0;j<m; j++){
            cout<<b[i][j]<<" ";
        }
        cout<<endl;
    }
    
    cout<<"sum of both matrix"<<endl;
        for(int i=0; i<n; i++){
        for(int j=0;j<m; j++){
            c[i][j]= a[i][j]+b[i][j];
            cout<<c[i][j]<<" ";
        }
        cout<<endl;
    }

    return 0;
}
